.movie-list-container{
   display: flex;
  flex-direction: row;
 
}
.movie-list{
  width: 648rpx;
  margin: 0 auto;
}
.movie-list-bg{
  background: #fff;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
}
.movie-list-bar{
   width: 632rpx;
  display: flex;
  font-size: 28rpx;
  justify-content: space-between;
  /*一边一个  */
  line-height: 55rpx;
}
.movie-list-mover{
  color: green;
}
/*隐层滚动条  */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}